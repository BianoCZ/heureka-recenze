{
    "name": "biano/heureka-recenze",
    "description": "Easy reviews import from Heureka.cz.",
    "type": "library",
    "homepage": "https://github.com/bianocz/heureka-recenze",
    "keywords": ["e-shop", "merchant", "commerce", "heureka.cz", "feedback", "reviews", "ratings"],
    "license": "MIT",
    "authors": [
        {
            "name": "Ondrej Koupil",
            "email": "koupil@optimato.cz"
        },
        {
            "name": "Biano team",
            "homepage": "https://github.com/bianocz/heureka-recenze/graphs/contributors"
        }
    ],
    "autoload": {
        "psr-4": {
            "Biano\\Heureka\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Biano\\Heureka\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.4",
        "ext-simplexml": "*",
        "ext-xmlreader": "*",
        "guzzlehttp/psr7": "^2.7",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.1",
        "psr/http-message": "^2.0"
    },
    "require-dev": {
        "biano/coding-standard": "^4.4",
        "guzzlehttp/guzzle": "^7.9",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpstan/phpstan-strict-rules": "^2.0",
        "phpunit/phpunit": "^11.5",
        "shipmonk/composer-dependency-analyser": "^1.8"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "cs": "phpcs",
        "phpstan": "phpstan analyse",
        "deps": "composer-dependency-analyser",
        "tests": "phpunit",
        "check": [
            "@cs",
            "@phpstan",
            "@deps",
            "@tests"
        ]
    }
}
